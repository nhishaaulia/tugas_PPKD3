import 'package:flutter/material.dart';

class SwitchTugas extends StatefulWidget {
  const SwitchTugas({super.key});

  @override
  State<SwitchTugas> createState() => _SwitchTugasState();
}

class _SwitchTugasState extends State<SwitchTugas> {
  bool isCheckSwitch = false;
  bool isCheckSwitch = false;
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text("Switch"), centerTitle: false),
      
      //Switch
      body: c
          Text("Switch"),
          Row(
            children: [
              Switch(
                activeColor: const Color.fromARGB(255, 255, 91, 168),
                value: isCheckSwitch,
                onChanged: (value) {
                  setState(() {
                    isCheckSwitch = value;
                  });
                },
              ),
              Text(isCheckSwitch ? "Turn On" : "Turn Off"),
            ],
          ),

          SizedBox(height: 16),

          //Dropdown
        ],
      ),
    );
  }
}
